
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Escrito por " }
    mixin author(page.metadata.author)

block content
  div.nav
    a(href=contents.index.url) « Todos os posts
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) « Todos os posts
  include comments